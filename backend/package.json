{
  "name": "kessan-scope-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "echo 'Use: npm run deploy:production' && exit 1",
    "deploy:production": "wrangler deploy --env=production",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "vitest --typecheck --run",
    "cf-typegen": "wrangler types",
    "db:migrate:local": "wrangler d1 migrations apply kessan-scope-db --local",
    "db:migrate:production": "wrangler d1 migrations apply kessan-scope-db --remote --env=production"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@kessan-scope/shared": "*",
    "fflate": "^0.8.2",
    "hono": "^4.6.0",
    "iconv-lite": "^0.7.1",
    "openai": "^6.15.0",
    "p-limit": "^3.1.0",
    "pdf-lib": "^1.17.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.11.1",
    "vitest": "~3.2.0",
    "wrangler": "^4.0.0"
  }
}
